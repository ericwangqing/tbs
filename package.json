{
  "name": "tbs",
  "keywords": [
    "Web3", "blockchain", "consensus", "consensusless"
  ],
  "version": "0.1.0",
  "description": "Time beacon chain",
  "bin": "bin/index.js",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env DEBUG=w3* node test/integration/dev.server.js",
    "start": "cross-env DEBUG=w3* node --max-old-space-size=1532 bin/index.js",
    "test": "cross-env DEBUG=w3* mocha --exit --ui bdd \"./test/**/*.test.js\"",
    "deps": "depcruise --include-only \"^src\" --output-type dot src | dot -T svg > architecture.svg",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "stage": "git add . && git commit -m \"$npm_package_version\" && git tag $npm_package_version && git push && git push --tags"
  },
  "author": "wangqing@mq-ai.cn",
  "license": "MIT",
  "dependencies": {
    "@chainsafe/libp2p-noise": "^8.0.0",
    "@libp2p/bootstrap": "^2.0.0",
    "@libp2p/mplex": "^5.0.0",
    "@libp2p/webrtc-star": "^3.0.0",
    "@libp2p/websockets": "^3.0.0",
    "cross-env": "^7.0.3",
    "debug": "^4.3.3",
    "dotenv": "^16.0.1",
    "gauss": "^0.2.12",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "auto-changelog": "^2.3.0",
    "chai": "^4.3.4",
    "chai-exclude": "^2.1.0",
    "dependency-cruiser": "^11.7.1",
    "ethereum-cryptography": "^1.1.2",
    "ethereumjs-wallet": "^1.0.2",
    "inquirer": "^8.2.4",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "vite": "^2.8.6"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
